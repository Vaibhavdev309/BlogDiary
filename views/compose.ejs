<% var dir = process.cwd() %>
<%- include(dir + "/views/partials/header.ejs") %>
<h1>Compose</h1>
<form action="/publish" method="post">
  <div class="form-group">

    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="postTitle">
    <label for="body">Blog Content</label>
    <textarea name="postBody" id="body" class="mt-3 form-control" rows="5"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include(dir + "/views/partials/footer.ejs") %>